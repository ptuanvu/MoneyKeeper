<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.0785">
            <TextView
                android:layout_width="match_parent"
                android:text="Xem ví tiền"
                android:textAlignment="center"
                android:background="#00abcf"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Tên ví tiền"
                android:textAlignment="center"
                android:background="#eaeaea"
                android:layout_margin="20dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/namewallet"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="#eeeeee"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Tiền hiện tại"
                android:textAlignment="center"
                android:background="#eaeaea"
                android:layout_margin="20dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/curmoneyitem"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="#eeeeee"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Tiền dự trữ"
                android:textAlignment="center"
                android:background="#eaeaea"
                android:layout_margin="20dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/resmoneyitem"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="#eeeeee"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Tiền tiết kiệm"
                android:textAlignment="center"
                android:background="#eaeaea"
                android:layout_margin="20dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/savingmoneyitem"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="#eeeeee"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:layout_weight="0.25">
            <Button
                android:id="@+id/updatebt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Cập nhật"
                android:textSize="20dp"
                android:background="#4ade7d"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btbacklistwallet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Quay lại"
                android:textSize="20dp"
                android:background="#4ade7d"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:layout_weight="0.25">
            <Button
                android:id="@+id/btnruttien"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Rút tiền"
                android:textSize="20dp"
                android:background="#4ade7d"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnguitien"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Gửi tiền"
                android:textSize="20dp"
                android:background="#4ade7d"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>