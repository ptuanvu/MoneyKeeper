<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên giao dịch"
        android:singleLine="true"
        android:id="@+id/edtTitle"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả giao dịch"
        android:id="@+id/edtDescription"
        android:lines="2"
        android:gravity="top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtLocation"
            android:singleLine="true"
            android:layout_weight="1"
            android:hint="Địa điểm"/>

        <ImageButton
            android:id="@+id/imbCurrentLocation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_my_location_24dp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thời gian"
            android:layout_weight="1"
            android:singleLine="true"
            android:id="@+id/edtThoiGian"/>

        <ImageButton
            android:id="@+id/imbTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_access_time_24dp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiêu tháng: "/>

    <Spinner
        android:id="@+id/spnCTT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Catalog: "/>

    <Spinner
        android:id="@+id/spnCatalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp"
            android:text="Giao dịch cố định ? "
            android:singleLine="true" />

        <CheckBox
            android:id="@+id/cbGiaoDichCoDinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ghi chú"
        android:id="@+id/edtNote"
        android:lines="2"
        android:gravity="top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnOK"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/buttonSuccess"
            android:text="OK"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/btnCancel"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Cancel"/>

    </LinearLayout>



</LinearLayout>