<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center|top"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vũ Phan"
        android:singleLine="true"
        android:paddingTop="20dp"
        android:typeface="serif"
        android:textSize="35dp"/>

    <TextView
        android:id="@+id/tvCurMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500.000 VND"
        android:singleLine="true"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="35dp"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="22dp"
        android:text="4.050.000/5.000.000"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp">

        <TableRow
            android:padding="5dp" >
            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:text="Số tiền tiết kiệm" />
            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:text="Số tiền dự trữ"/>
        </TableRow>

        <TableRow
            android:padding="5dp" >
            <TextView
                android:id="@+id/tvSaveMoney"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="18dp"
                android:text="200.000 VND" />
            <TextView
                android:id="@+id/tvBankMoney"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="18dp"
                android:text="500.000 VND"/>
        </TableRow>

    </TableLayout>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/gvGraph"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>